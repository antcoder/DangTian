    script(type='text/javascript')
      $(document).ready(function(){
        $(".body").each(function(){
            $(this).html($(this).attr('data'));
        });
        $("#searchtxt").keydown(function(e){
          if(e.which==13){
          if($("#searchtxt").val().length>0){
            window.location.href='/word/'+$("#searchtxt").val();
          }else{
            window.location.href='/';
          }
          }
        });
      })
