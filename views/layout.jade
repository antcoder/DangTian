html(lang = "en")
  head
    link(rel='stylesheet',href='/stylesheets/style.css')
    script(type='text/javascript',src='/javascripts/jquery-1.7.1.min.js')
    script(type='text/javascript',src='/javascripts/made/js/ace.js')
